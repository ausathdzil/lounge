<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.ausathdzil.lounge</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Lounge</name>
  <summary>Track your movie watches</summary>
  <description>
    <p>
      Lounge is a personal movie tracker for GNOME. Search for movies,
      rate them, and keep a log of everything you have watched.
    </p>
    <p>Features:</p>
    <ul>
      <li>Search movies using The Movie Database (TMDB)</li>
      <li>View movie details including poster, overview, runtime, genres, and director</li>
      <li>Log movies with a 5-star rating, watch date, and personal notes</li>
      <li>Browse and sort your log by date, rating, or title</li>
      <li>Edit or delete existing log entries</li>
    </ul>
  </description>

  <developer id="io.github.ausathdzil">
    <name>Ausath Ikram</name>
  </developer>

  <url type="homepage">https://github.com/ausathdzil/lounge</url>
  <url type="vcs-browser">https://github.com/ausathdzil/lounge</url>
  <url type="bugtracker">https://github.com/ausathdzil/lounge/issues</url>

  <translation type="gettext">lounge</translation>
  <launchable type="desktop-id">io.github.ausathdzil.lounge.desktop</launchable>
  <content_rating type="oars-1.1" />

  <branding>
    <color type="primary" scheme_preference="light">#c4a7e7</color>
    <color type="primary" scheme_preference="dark">#6e6a86</color>
  </branding>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
  </supports>

  <releases>
    <release version="1.0.0" date="2026-02-06">
      <description translate="no">
        <p>Initial release of Lounge.</p>
        <ul>
          <li>Search movies via TMDB</li>
          <li>View movie details with poster, overview, runtime, genres, and director</li>
          <li>Log movies with rating, date, and notes</li>
          <li>Browse and sort your movie log</li>
          <li>Edit and delete log entries</li>
          <li>Local SQLite database for offline access</li>
          <li>Poster caching for fast loading</li>
        </ul>
      </description>
    </release>
  </releases>

</component>
